<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="11dp" >

                    <ProgressBar
                        android:id="@+id/memoized_rate_category_basic"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:indeterminate="false"
                        android:progress="100"
                        android:progressDrawable="@drawable/memorized_shape_ring" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="기초"
                        android:textColor="@color/sweet_black"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="11dp" >

                    <ProgressBar
                        android:id="@+id/memoized_rate_category_high"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:indeterminate="false"
                        android:progress="75"
                        android:progressDrawable="@drawable/memorized_shape_ring" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="수능"
                        android:textColor="@color/sweet_black"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="11dp" >

                    <ProgressBar
                        android:id="@+id/memoized_rate_category_middle"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:indeterminate="false"
                        android:progress="50"
                        android:progressDrawable="@drawable/memorized_shape_ring" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="중학"
                        android:textColor="@color/sweet_black"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp" >

                    <ProgressBar
                        android:id="@+id/memoized_rate_category_toeic"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:indeterminate="false"
                        android:progress="25"
                        android:progressDrawable="@drawable/memorized_shape_ring" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="토익"
                        android:textColor="@color/sweet_black"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/graph_8_text_memory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="29dp"
        android:text="카테고리 마다 얼마나 완벽하게 학습하는지 보여줍니다."
        android:textColor="@color/sweet_blue"
        android:textSize="10dp" />

</RelativeLayout>