<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_study_begin_id_mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90" />

        <LinearLayout
            android:id="@+id/fragment_study_begin_whole_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1043"
            android:background="@drawable/study_8_img_engcard"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="378" >

                <!-- word ON -->

                <ImageView
                    android:id="@+id/fragment_study_begin_id_word_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/study_8_img_number_1" />

                <!-- baby image -->

                <ImageView
                    android:id="@+id/fragment_study_begin_id_word_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="61dp"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="257" >

                <!-- speack btn -->

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="1.8dp"
                    android:background="@drawable/studybigin_drawable_btn_speaker"
                    android:onClick="readItForMe" /> <!-- word -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="175"
                        android:gravity="center_horizontal|bottom"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/study_word_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="baby"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <!-- word pronounce -->

                        <TextView
                            android:id="@+id/study_word_pron_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:text="[baby]"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                        <!-- word pronounce -->
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="80" />

                    <TextView
                        android:id="@+id/study_word_ex_tv"
                        android:layout_width="290dp"
                        android:layout_height="0dp"
                        android:layout_weight="144"
                        android:gravity="center_horizontal"
                        android:text="asdf\nasdf"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="147" />
    </LinearLayout>

</RelativeLayout>