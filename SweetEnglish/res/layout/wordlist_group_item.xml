<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="26dp"
    android:paddingTop="26dp" >

    <CheckBox
        android:id="@+id/cb_wordlist_group_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@drawable/wordbook_3_btn_checkbox_normal"
        android:button="@drawable/popup_view_home_word_list_chegebox"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_wordlist_group_item_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/wordbook_1_img_newgroup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_wordlist_group_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="전체 단어"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_wordlist_group_item_cnt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="(32)"
            android:textColor="#000000"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/iv_wordlist_group_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="22dp"
            android:background="@drawable/wordbook_1_img_pinkarrow" />
    </LinearLayout>

</LinearLayout>